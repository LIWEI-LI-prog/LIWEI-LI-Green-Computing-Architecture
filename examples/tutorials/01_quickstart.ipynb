"""
三元计算测试
"""

import pytest
import numpy as np
from src.core.ternary_computing import (
    TernaryLogic, TernaryState, TernaryValue, TernaryNeuron
)

class TestTernaryLogic:
    """测试三元逻辑"""
    
    def test_ternary_state_enum(self):
        """测试枚举值"""
        assert TernaryState.FALSE == -1
        assert TernaryState.UNKNOWN == 0
        assert TernaryState.TRUE == 1
        
        assert str(TernaryState.TRUE) == "TRUE"
        assert str(TernaryState.UNKNOWN) == "UNKNOWN"
        assert str(TernaryState.FALSE) == "FALSE"
    
    def test_ternary_value_creation(self):
        """测试三元值创建"""
        # 从枚举创建
        tv = TernaryValue(TernaryState.TRUE)
        assert tv.value == TernaryState.TRUE
        
        # 从浮点数创建
        tv = TernaryValue.from_float(0.8)
        assert tv.value == TernaryState.TRUE
        
        tv = TernaryValue.from_float(0.2)
        assert tv.value == TernaryState.UNKNOWN
        
        tv = TernaryValue.from_float(-0.5)
        assert tv.value == TernaryState.FALSE
    
    def test_logic_gates(self):
        """测试逻辑门"""
        logic = TernaryLogic()
        
        # 与门
        assert logic.and_gate(TernaryState.TRUE, TernaryState.TRUE) == TernaryState.TRUE
        assert logic.and_gate(TernaryState.TRUE, TernaryState.UNKNOWN) == TernaryState.UNKNOWN
        assert logic.and_gate(TernaryState.TRUE, TernaryState.FALSE) == TernaryState.FALSE
        
        # 或门
        assert logic.or_gate(TernaryState.FALSE, TernaryState.FALSE) == TernaryState.FALSE
        assert logic.or_gate(TernaryState.FALSE, TernaryState.UNKNOWN) == TernaryState.UNKNOWN
        assert logic.or_gate(TernaryState.FALSE, TernaryState.TRUE) == TernaryState.TRUE
        
        # 非门
        assert logic.not_gate(TernaryState.TRUE) == TernaryState.FALSE
        assert logic.not_gate(TernaryState.UNKNOWN) == TernaryState.UNKNOWN
        assert logic.not_gate(TernaryState.FALSE) == TernaryState.TRUE
    
    def test_batch_conversion(self):
        """测试批量转换"""
        logic = TernaryLogic()
        
        values = np.array([0.8, -0.2, 0.6, -0.9, 0.1])
        result = logic.batch_convert(values)
        expected = np.array([1, 0, 1, -1, 0])
        
        np.testing.assert_array_equal(result, expected)
    
    def test_matrix_multiplication(self):
        """测试矩阵乘法"""
        logic = TernaryLogic()
        
        A = np.array([[1, 0], [-1, 1]])
        B = np.array([[0, 1], [1, -1]])
        
        result = logic.matrix_multiply(A, B)
        expected = np.array([[0, 1], [1, -1]])
        
        np.testing.assert_array_equal(result, expected)
        
        # 测试结果在三元范围内
        assert np.all(result >= -1) and np.all(result <= 1)

class TestTernaryNeuron:
    """测试三元神经元"""
    
    def test_neuron_creation(self):
        """测试神经元创建"""
        weights = np.array([1, 0, -1])
        neuron = TernaryNeuron(weights, bias=0.5)
        
        assert np.array_equal(neuron.weights, weights)
        assert neuron.bias == 0.5
    
    def test_neuron_forward(self):
        """测试前向传播"""
        weights = np.array([1, -1, 0])
        neuron = TernaryNeuron(weights, bias=0.0)
        
        # 测试不同输入
        inputs = np.array([0.8, -0.8, 0.2])
        output = neuron.forward(inputs)
        
        # 输出应为三元状态
        assert output in [TernaryState.FALSE, TernaryState.UNKNOWN, TernaryState.TRUE]